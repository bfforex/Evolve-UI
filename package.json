{
  "name": "evolve-ui",
  "version": "2.2.0",
  "description": "Evolve UI - AI-powered chat interface with advanced web search, memory management, and thinking capabilities",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:api && npm run test:integration && npm run test:performance",
    "test:api": "node test/api-tests.js",
    "test:frontend": "echo \"Frontend tests available at test/frontend-tests.html - open in browser\"",
    "test:integration": "node test/integration-tests.js",
    "test:performance": "node test/performance-tests.js",
    "test:coverage": "c8 npm test",
    "lint": "eslint server.js public/index.html test/*.js",
    "lint:fix": "eslint --fix server.js public/index.html test/*.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "ai",
    "chat",
    "llm",
    "ollama",
    "web-search",
    "memory",
    "rag",
    "assistant",
    "thinking",
    "evolve"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bfforex/Evolve-UI.git"
  },
  "bugs": {
    "url": "https://github.com/bfforex/Evolve-UI/issues"
  },
  "homepage": "https://github.com/bfforex/Evolve-UI#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "helmet": "^7.0.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "c8": "^8.0.1",
    "supertest": "^6.3.3",
    "chai": "^4.3.10"
  },
  "author": "bfforex",
  "license": "MIT"
}
